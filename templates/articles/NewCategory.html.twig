{% extends 'base.html.twig' %}

{% block title %}
    Liste des Articles
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: white;
            color: white;
        }
        .card {
            background-color: #222;
            border-color: #333;
        }
        .card-header {
            background-color: #333;
            border-color: #333;
            color: #fff;
        }
        .btn-primary {
            background-color: #000;
            border-color: white;
        }
        .btn-primary:hover {
            background-color: #333;
            border-color: white;
        }
    </style>
{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Ajouter une catégorie</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    <div class="form-group">
                        {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre de la catégorie'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description de la catégorie'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Créer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
